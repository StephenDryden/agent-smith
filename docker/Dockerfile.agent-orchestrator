# Use the .NET SDK image to build and run the application
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /app

# Copy the project files
COPY src/Agent.Orchestrator/Agent.Orchestrator.csproj src/Agent.Orchestrator/
COPY Directory.Packages.props .
COPY Directory.Build.props .
COPY global.json .

# Restore dependencies
RUN dotnet restore src/Agent.Orchestrator/Agent.Orchestrator.csproj

# Copy the entire source code
COPY src/Agent.Orchestrator/ src/Agent.Orchestrator/

# Build the application
RUN dotnet publish src/Agent.Orchestrator/Agent.Orchestrator.csproj -c Release -o /out

# Use the runtime image to run the application
FROM mcr.microsoft.com/dotnet/aspnet:8.0
WORKDIR /app

# Install curl for debugging purposes
RUN apt-get update && apt-get install -y curl && rm -rf /var/lib/apt/lists/*

# Copy the published output
COPY --from=build /out .

# Copy the configuration file
COPY configs/orchestrator.agent.json /app/configs/orchestrator.agent.json

# Expose the default port
EXPOSE 8080

# Run the application
ENTRYPOINT ["dotnet", "Agent.Orchestrator.dll"]
